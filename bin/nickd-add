#!/usr/bin/env node
var program = require('commander')
var data = require('prettiest')()

var Nickd = require('../src/nickd')
var nickd = new Nickd(data.tasks)

program
  .description('Add a new task')
  .parse(process.argv)

var task = program.args.join(' ')
if (task) {
  console.log(task)
  nickd.add(task)
  data.tasks = nickd.tasks
}
